# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                                controllers.Application.index()
GET     /help                                            controllers.Application.help()
GET     /size/:number                                    controllers.Application.size(number: Integer)
GET     /set/:player/:cardOne/:cardTwo/:cardThree        controllers.Application.set(player: Integer, cardOne: Integer, cardTwo: Integer, cardThree: Integer)
GET     /reset                                           controllers.Application.reset()
GET     /solve                                           controllers.Application.solve()
GET     /cards.json                                      controllers.Application.cards()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
