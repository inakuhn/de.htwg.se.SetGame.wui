# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# HTML
GET     /                                               controllers.Application.index()
GET     /size/:number                                   controllers.Application.size(number: Integer)

# Json
GET     /set/:player/:cardOne/:cardTwo/:cardThree       controllers.Application.set(player: Integer, cardOne: Integer, cardTwo: Integer, cardThree: Integer)
GET     /cards.json                                     controllers.Application.cards()
GET     /points.json                                    controllers.Application.points()
GET     /solve.json                                     controllers.Application.solve()
GET     /reset.json                                     controllers.Application.reset()

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file                                    controllers.Assets.at(path="/public", file)
GET    /webjars/*file                                   controllers.WebJarAssets.at(file)

# Websocket test site
GET   /ws                                               controllers.Application.ws()